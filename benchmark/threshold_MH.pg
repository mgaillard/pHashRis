#!/usr/bin/gnuplot
reset
set terminal pngcairo size 1280,720 enhanced

set title ' Marr-Hildreth Operator: Precision, Recall, F-measure'
set xlabel 'Threshold'
set ylabel 'Value'

set yrange [0:1]

plot 'result_MH.dat' using 1:2 with linespoints title 'Precision', \
     'result_MH.dat' using 1:3 with linespoints title 'Recall',    \
     'result_MH.dat' using 1:4 with linespoints title 'F-measure'
